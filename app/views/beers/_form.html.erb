<%= form_for @beer do |f| %>
  <%= f.error_messages %>
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :style %><br />
    <%= f.text_field :style %>
  </div>
  <div class="form-group">
    <%= f.label :abv %><br />
    <%= f.text_field :abv %>
  </div>
  <div><%= f.submit 'Submit', class: 'btn btn-primary btn-lg'%></div>
<% end %>